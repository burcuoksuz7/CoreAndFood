@using X.PagedList;
@using X.PagedList.Mvc.Core

@model IPagedList<CoreAndFood.Data.Models.Food>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food List</h2>
<br />
<table class="table table-bordered">
	<tr>
		<th>Food ID</th>
		<th>Food Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Image</th>
		<th>Stock</th>
		<th>Category</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<th>@x.FoodId</th>
			<td>@x.FoodName</td>
			<td>@x.FoodDesc</td>
			<td>@x.Price</td>
			<td>
				<img src="@x.ImgageUrl" style="width:90px; height:80px" ; />
			</td>
			<td>@x.Stock</td>
			<td>@x.Category.CategoryName</td>
			<td><a href="/Food/FoodGet/@x.FoodId" class="btn btn-success">Update</a></td>
			<td><a href="/Food/FoodDelete/@x.FoodId" class="btn btn-danger">Delete</a></td>
		</tr>
	}
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/Food/FoodAdd/" class="btn pull-right btn-warning">New Food</a>
